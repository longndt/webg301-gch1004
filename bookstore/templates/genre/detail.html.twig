{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-8 text-center mt-3">
   <div class="row">
      <div class="col-md-4">
         <img src="{{ genre.image }}" width="300" height="300">
      </div>
      <div class="col-md-8">
         <table class="table table-bordered">
            <tr>
               <th colspan="2" class="bg-success text-warning">Genre Detail</th>
            </tr>
            <tr>
               <th class="bg-light col-md-5">Genre Name</th>
               <td class="col-md-7">{{ genre.name }}</td>
            </tr>
             <tr>
               <th class="bg-light col-md-5">Book List</th>
               <td class="col-md-7"> </td>
            </tr>
         </table>
      </div>
   </div>
</div>
{% endblock %}