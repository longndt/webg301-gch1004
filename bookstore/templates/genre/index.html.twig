{# giao diện dạng bảng cho admin quản lý #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="container col-md-8 text-center mt-3">
<table class="table table-light">
    <tr>
        <th colspan="3" class="text text-danger"><h1>Genre List</h1></th>
        <th>
            <a href="{{ path('genre_add') }}">
                <img src={{ asset('images/buttons/add.png') }} width="50" height="50">
            </a>
        </th>
    </tr>
    <tr>
        <th class="text text-primary">Genre Id</th>
        <th class="text text-primary">Genre Name</th>
        <th class="text text-primary">Genre Image</th>
        <th class="text text-primary">Actions</th>
    </tr>
    {% for genre in genres %}
    <tr>
        <td class="text text-success">{{ genre.id }}</td>
        <td class="text text-success">{{ genre.name }}</td>
        <td>
            <img src="{{ genre.image }}" width="100" height="120">
        </td>
        <td>
            <a href="{{ path('genre_detail', {'id' : genre.id }) }}">
                <img src="{{ asset('images/buttons/detail.png')}}" width="50" height="50">
            </a>
            <a href="{{ path('genre_edit', {'id' : genre.id }) }}">
                <img src="{{ asset('images/buttons/edit.png')}}" width="50" height="50">
            </a>
            <a href="{{ path('genre_delete', {'id' : genre.id }) }}">
                <img src="{{ asset('images/buttons/delete.png')}}" width="50" height="50">
            </a>
        </td>
    </tr>
    {% endfor %}
</table>
</div>
{% endblock %}

