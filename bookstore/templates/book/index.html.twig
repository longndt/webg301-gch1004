{# giao diện dạng bảng cho admin quản lý #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="container col-md-8 text-center mt-3">
<table class="table table-light">
    <tr>
        <th colspan="3" class="text text-danger"><h1>Book List</h1></th>
        <th>
            <a href="{{ path('book_add') }}">
                <img src={{ asset('images/buttons/add.png') }} width="50" height="50">
            </a>
        </th>
    </tr>
    <tr>
        <th class="text text-primary">Book Id</th>
        <th class="text text-primary">Book Title</th>
        <th class="text text-primary">Book Image</th>
        <th class="text text-primary">Actions</th>
    </tr>
    {% for book in books %}
    <tr>
        <td class="text text-success">{{ book.id }}</td>
        <td class="text text-success">{{ book.title }}</td>
        <td>
            <a href="{{ path('book_detail', {'id' : book.id }) }}">
                <img src="{{ asset('images/books/'~book.image)}}" width="100" height="120">
            </a>
        </td>
        <td>
            <a href="{{ path('book_detail', {'id' : book.id }) }}">
                <img src="{{ asset('images/buttons/detail.png')}}" width="50" height="50">
            </a>
            <a href="{{ path('book_edit', {'id' : book.id }) }}">
                <img src="{{ asset('images/buttons/edit.png')}}" width="50" height="50">
            </a>
            <a href="{{ path('book_delete', {'id' : book.id }) }}"
            onclick="return confirm('Are you sure to delete this book ?');"
            >
                <img src="{{ asset('images/buttons/delete.png')}}" width="50" height="50">
            </a>
        </td>
    </tr>
    {% endfor %}
</table>
</div>
{% endblock %}
