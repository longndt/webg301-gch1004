{# giao diện dạng bảng cho admin quản lý #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="container col-md-8 text-center mt-3">
<table class="table table-light">
    <tr>
        <th colspan="3" class="text text-danger"><h1>Author Index</h1></th>
        <th>
            <a href="{{ path('author_add') }}">
                <img src={{ asset('images/buttons/add.png') }} width="50" height="50">
            </a>
        </th>
    </tr>
    <tr>
        <th class="text text-primary">Author Id</th>
        <th class="text text-primary">Author Name</th>
        <th class="text text-primary">Author Image</th>
        <th class="text text-primary">Actions</th>
    </tr>
    {% for author in authors %}
    <tr>
        <td class="text text-success">{{ author.id }}</td>
        <td class="text text-success">{{ author.name }}</td>
        <td>
           <a href="{{ path('author_detail', {'id' : author.id }) }}">
                <img src="{{ author.image }}" width="100" height="120">
           </a>
        </td>
        <td>
            <a href="{{ path('author_detail', {'id' : author.id }) }}">
                <img src="{{ asset('images/buttons/detail.png')}}" width="50" height="50">
            </a>
            <a href="{{ path('author_edit', {'id' : author.id }) }}">
                <img src="{{ asset('images/buttons/edit.png')}}" width="50" height="50">
            </a>
            <a href="{{ path('author_delete', {'id' : author.id }) }}">
                <img src="{{ asset('images/buttons/delete.png')}}" width="50" height="50">
            </a>
        </td>
    </tr>
    {% endfor %}
</table>
</div>
{% endblock %}
