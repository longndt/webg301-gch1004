{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-8 text-center mt-3">
   <div class="row">
      <div class="col-md-4">
         <img src="{{ author.image }}" width="300" height="300">
      </div>
      <div class="col-md-8">
         <table class="table table-bordered">
            <tr>
               <th colspan="2" class="bg-success text-warning">Author Detail</th>
            </tr>
            <tr>
               <th class="bg-light col-md-5">Author Name</th>
               <td class="col-md-7">{{ author.name }}</td>
            </tr>
             <tr>
               <th class="bg-light col-md-5">Author Age</th>
               <td class="col-md-7">{{ author.age }}</td>
            </tr>
             <tr>
               <th class="bg-light col-md-5">Published Books</th>
               <td class="col-md-7">
                  {% if author.books != null %}
                      {% for book in author.books %}
                           <a href="{{ path('book_detail', {'id' : book.id})}}">
                              {{ book.title }} 
                           </a>
                        <br>
                      {% endfor %}
                  {% endif %}
               </td>
            </tr>
         </table>
      </div>
   </div>
</div>
{% endblock %}